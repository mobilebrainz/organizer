<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="250.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.khodko.organizer.controller.PairEditDialogController">
    <GridPane AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="218.0" minWidth="10.0" prefWidth="111.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="316.0" minWidth="10.0" prefWidth="261.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <Label text="Номер пары"/>
        <Label text="Предмет" GridPane.rowIndex="1"/>
        <Label text="Тип предмета" GridPane.rowIndex="2"/>
        <Label text="Преподаватель" GridPane.rowIndex="3"/>
        <Label text="Кабинет" GridPane.rowIndex="4"/>
        <ChoiceBox fx:id="typesChoiceBox" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <ChoiceBox fx:id="teachersChoiceBox" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <TextField fx:id="cabinetField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        <ChoiceBox fx:id="lessonsChoiceBox" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Spinner fx:id="numPairSpinner" max="10" min="1" prefWidth="60.0" GridPane.columnIndex="1"/>
    </GridPane>
    <ButtonBar AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0">
        <buttons>
            <Button mnemonicParsing="false" onAction="#onOkBtn" text="OK"/>
            <Button mnemonicParsing="false" onAction="#onCancelBtn" text="Отмена"/>
            <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#onDeleteBtn" text="Удалить пару"/>
        </buttons>
    </ButtonBar>
</AnchorPane>
