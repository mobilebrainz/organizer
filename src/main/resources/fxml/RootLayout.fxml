<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.khodko.organizer.controller.RootController">
    <top>
        <AnchorPane BorderPane.alignment="CENTER">
            <MenuBar AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                     AnchorPane.topAnchor="0.0">
                <Menu mnemonicParsing="false" text="File">
                    <MenuItem mnemonicParsing="false" text="Close"/>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <MenuItem mnemonicParsing="false" text="Delete"/>
                </Menu>
                <Menu mnemonicParsing="false" text="Редактировать...">
                    <MenuItem mnemonicParsing="false" onAction="#onAddTeachersMenu" text="преподавателей"/>
                    <MenuItem mnemonicParsing="false" onAction="#onAddLessonsMenu" text="предметы"/>
                </Menu>
            </MenuBar>
            <DatePicker fx:id="datePicker" onAction="#onDatePicker" AnchorPane.rightAnchor="0.0"/>
        </AnchorPane>

    </top>
</BorderPane>
