<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.khodko.organizer.controller.RootController">
    <top>
        <AnchorPane BorderPane.alignment="CENTER">
            <children>
                <MenuBar AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <menus>
                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Close" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Edit">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Delete" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Добавить...">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#onAddTeachersMenu" text="преподавателей" />
                                <MenuItem mnemonicParsing="false" onAction="#onAddLessonsMenu" text="предметы" />
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <DatePicker fx:id="datePicker" onAction="#onDatePicker" AnchorPane.rightAnchor="0.0" />
            </children>
        </AnchorPane>

    </top>
</BorderPane>
